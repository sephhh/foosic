<!-- rails indicator to include board js -->
<%= javascript_include_tag "web_audio_helpers" %>
<%= javascript_include_tag "sample_menu" %>
<%= javascript_include_tag "looping_helpers" %>
<%= javascript_include_tag "board_helpers" %>
<%= javascript_include_tag "peerjs_connection_helpers" %>
<%= javascript_include_tag "new_sample" %>

<%= javascript_include_tag "board" %>
<script src="//cdnjs.cloudflare.com/ajax/libs/dropbox.js/0.10.2/dropbox.min.js">
</script>



<!-- end rails indicator -->
<!-- full page wrapper -->
<div id="wrapper" class="toggled">
    <!-- sidebar -->
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li>
                <a style="color:yellow; cursor:pointer" id="change-pad">CHANGE PAD</a>
            </li>
            <li>
                <a style="color:red; cursor:pointer" id="connect">CONNECT</a>
            </li>
            <li>
                <a style="color:orange; cursor:pointer" id="load-board">LOAD BOARD</a>
            </li>
            <li>
                <a style="color:purple; cursor:pointer" id="save-board">SAVE BOARD</a>
            </li>

            <li>
                <a style="color:green; cursor:pointer" id="add-sample">ADD SAMPLE</a>
            </li>
            <% if user_signed_in? %>
                <div id="username-hidden" style="display:none"><%= current_user.username %></div>
                <li>
                    <%= link_to "SIGNOUT", destroy_user_session_path, method: :delete, style:"color:grey"  %>
                </li>
            <% else %>
                <li>
                    <%= link_to "SIGN IN", new_user_session_path, style:"color:white"  %>
                </li>
                <li>
                    <%= link_to "SIGN UP", new_user_registration_path, style:"color:grey"  %>
                </li>
            <% end %>

        </ul>
    </div>
    <!-- end sidebar -->
    <!-- main page -->
    <div id="page-content-wrapper">
        <!-- hidden first visit indicator -->
        <div id="first-visit-indicator" style="display:none"><%= @first_visit %></div>
        <!-- end hidden first visit indicator -->

        <!-- animation layers for looper -->
        <div id="player-layer"></div>
        <div id="recording-layer"></div>
        <!-- end animation layers -->

        <!-- toggle button -->
        <button class="btn btn-default" id="menu-toggle"><span id="menu-arrow" class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></button>
        <!-- end toggle button -->

        <!-- board -->
        <div id="pad-0" data-id="0" class="button col-md-4 pad">T</div>
        <div id="pad-1" data-id="1" class="button col-md-4 pad">Y</div>
        <div id="pad-2" data-id="2" class="button col-md-4 pad">U</div>
        <div id="pad-3" data-id="3" class="button col-md-4 pad">G</div>
        <div id="pad-4" data-id="4" class="button col-md-4 pad">H</div>
        <div id="pad-5" data-id="5" class="button col-md-4 pad">J</div>
        <div id="pad-6" data-id="6" class="button col-md-4 pad">B</div>
        <div id="pad-7" data-id="7" class="button col-md-4 pad">N</div>
        <div id="pad-8" data-id="8" class="button col-md-4 pad">M</div>
        <!-- end board -->

        <!-- intro message modal -->
        <div id="intro-message-modal" class="message-modal modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <p style="color:blue">TURN SOUND ON AND TYPE TO PLAY</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- end intro message modal -->

        <!-- modal select pad message -->
        <div id="select-a-pad-modal" class="message-modal modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <p>CLICK A PAD TO CHANGE ITS SAMPLE</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- end select-a-pad modal -->

        <!-- modal sign-in-to-save message -->
        <div id="sign-in-to-save-modal" class="message-modal modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <p style="color:purple">YOU MUST SIGN IN / SIGN UP TO SAVE</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- end sign-in-to-save modal -->

        <!-- sample selection modal -->
        <div id="sampleModal" class="modal fade" role="dialog">
                <div class="modal-dialog">

                    <!-- modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">CHOOSE A SAMPLE</h4>
                        </div>
                        <div class="modal-body">
                            <ul id="sample-list" class="modal-ul">
                            </ul>
                            <!-- append options here -->
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-success" data-dismiss="modal" id="confirm-sample">CONFIRM</button>
                        </div>
                    </div>

                </div>
            </div>

        <!-- end modal -->

        <!-- connection message modal -->
        <div id="connection-message-modal" class="message-modal modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <p id="connection-message"></p>
                    </div>
                </div>
            </div>
        </div>
        <!-- end connection message modal -->

        <!-- online users modal -->
        <div id="online-users-modal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="username-message" style="color:black">YOU ARE: <span id="username-for-connection" style="color:red"></span></h4><br />
                        <h4 class="modal-title" style="color:black">CONNECT WITH SOMEONE ELSE ONLINE...</h4>
                    </div>
                    <div class="modal-body">
                        <ul id="online-users" class="modal-ul">
                            <li class="online-user">no one's online :(</li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
        <!-- end modal -->

        <!-- connection requested modal -->
        <div id="connection-requested-modal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 id="requested-connection" style="color:red"></h3>
                    </div>
                    <div class="modal-footer" style="text-align:center">
                        <button type="button" class="btn btn-success" data-dismiss="modal" id="confirm-connection-request" style="color:red">CONFIRM</button>
                        <button type="button" class="btn btn-success" data-dismiss="modal" id="reject-connection-request" style="color:red">REJECT</button>
                    </div>
                </div>

            </div>
        </div>
        <!-- end connection requested modal -->

        <!-- list boards modal -->
        <div id="list-boards-modal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- modal content-->
                <div class="modal-content" style="color:orange">
                    <div class="modal-header">
                        <h4 class="modal-title">CHOOSE A BOARD</h4>
                    </div>
                    <div class="modal-body">
                        <ul id="list-boards-ul" class="modal-ul">
                        </ul>
                    </div>
                </div>

            </div>
        </div>
        <!-- end load boards modal -->
        <!-- board save modal -->
         <div id="board-save-modal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">SAVE BOARD AS</h4>
                    </div>
                    <div class="modal-body">
                        <form action>
                            <input type="text" id="board-name-input" onfocus="this.value = '';" value="enter a name here">
                        </form>
                        <!-- append options here -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" data-dismiss="modal" id="confirm-board-save">SAVE</button>
                    </div>
                </div>

            </div>
        </div>
        <!-- end board save modal -->
    <!-- add sample modal -->
         <div id="add-sample-modal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">ADD SAMPLE</h4>
    
                    </div>
                     <div class="modal-body">
                        <h1 style="cursor:pointer" id="dropbox-connect"></h1>
                        <div id="from-dropbox" style="display:none">
                            GET A FILE FROM DROPBOX:
                            <input id="dropbox-file-input" type="text">
                            <button type="button" class="btn btn-success" data-dismiss="modal" id="get-file-from-dropbox">GET IT</button>
                        </div>
                        <div id="recording-interface"></div>
                        <div id="recordingslist"></div>
                        <!-- append options here -->
                     </div>
                    <div class="modal-footer">
                        <div id="rec-buttons" style="display:none">
                            <button type="button" class="btn btn-success" data-dismiss="modal" id="new-sample-save">SAVE</button>
                            <button type="button" class="btn btn-success" id="new-sample-clear">CLEAR</button>
                            <button type="button" class="btn btn-success" data-dismiss="modal" id="new-sample-cancel">CANCEL</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- end add sample modal -->
    </div>
    <!-- end main page -->
</div>

<!-- end full page wrapper -->
