<div class="devise-content-wrapper">
    <h2 class="devise-header">SIGN UP FOR TYUTYU.BE</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="devise-field field">
            <%= f.email_field :username, autofocus: true, placeholder: "USERNAME" %>
        </div>

        <div class="devise-field field">
            <%= f.email_field :email, autofocus: true, placeholder: "EMAIL" %>
        </div>

        <div class="devise-field field">
            <%= f.password_field :password, autocomplete: "off", placeholder: "PASSWORD" %>
        </div>

        <div class="devise-field field">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "CONFIRM PASSWORD" %>
        </div>

        <div class="devise-action actions">
            <%= f.submit "SUBMIT" %>
        </div>
    <% end %>

    <!-- <%= render "devise/shared/links" %> -->
</div>
